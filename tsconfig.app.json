{
    "compilerOptions": {
      "jsx": "react", 
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
      "esModuleInterop": true,
      "allowJs": true,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }